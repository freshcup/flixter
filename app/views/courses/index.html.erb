<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn something today</h1>
  <hr />

  <% @courses.each do |course| %>
    <% if course.title %>
      <h2 class="text-left">
        <%= link_to course.title, course_path(course) %>
      </h2>
     <br />
      <% if course.file.url %>
        <%= image_tag course.file.url, class: 'img-fluid' %>
      <% end %>
    <% end %>
       
    
    <br />
    <div class="row">
      <div class="col-12 col-sm-7">
        <%= course.description %>
        <br />
        <br />
       <%= link_to 'More Details', course_path(course), class: 'btn btn-primary btn-large' %>
    </div>
 </div>
<br class="clr" />
<% end %>
</div>